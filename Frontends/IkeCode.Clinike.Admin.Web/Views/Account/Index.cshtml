@model IEnumerable<EditUserViewModel>
@{
    ViewBag.Title = "Index";
}
<div class="col-xs-12 col-sm-12">
    <div class="box">
        <div class="box-header">
            <div class="box-name">
                <i class="fa fa-user"></i>
                <span>Controle de Acesso</span>
            </div>
            <div class="box-icons">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
                <a class="expand-link">
                    <i class="fa fa-expand"></i>
                </a>
            </div>
            <div class="no-move"></div>
        </div>
        <div class="box-content">
            <h4 class="page-header">Lista de Usuários @Html.RouteLink("Novo", "AccountRegister", null, new { @class = "btn btn-primary btn-xs pull-right", @role = "button" })</h4>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.RouteLink("Editar", "AccountEdit", new { id = item.Id }) |
                            @Html.RouteLink("Permissões", "AccountUserRoles", new { id = item.Id }) |
                            @Html.RouteLink("Apagar", "AccountDelete", new { id = item.Id })
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>