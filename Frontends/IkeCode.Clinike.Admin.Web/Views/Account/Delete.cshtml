@model EditUserViewModel
@{
    ViewBag.Title = "Excluir Usuário";
}
<div class="col-xs-12 col-sm-12">
    <div class="box">
        <div class="box-header">
            <div class="box-name">
                <i class="fa fa-user"></i>
                <span>Excluir usuário</span>
            </div>
            <div class="box-icons">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
                <a class="expand-link">
                    <i class="fa fa-expand"></i>
                </a>
            </div>
            <div class="no-move"></div>
        </div>
        <div class="box-content">
            <h4 class="page-header">Tem certeza que deseja excluir esse usuário?</h4>
            <div>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.UserName)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.UserName)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                </dl>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <div class="col-sm-offset-10 col-sm-4">
                            <button type="submit" class="btn btn-danger btn-label-left">
                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                Excluir
                            </button>
                        </div>
                    </div>

                    <div class="form-actions no-color small">
                        @Html.RouteLink("< Voltar a lista", "AccountIndex")
                    </div>
                }
            </div>
        </div>
    </div>
</div>