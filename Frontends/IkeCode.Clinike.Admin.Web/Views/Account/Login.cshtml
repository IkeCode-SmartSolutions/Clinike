@model LoginViewModel

@{
    ViewBag.Title = "Clinike Login";
    Layout = null;
}

<!DOCTYPE html>
<!--[if lt IE 7 ]> <html lang="en" class="no-js ie6 lt8"> <![endif]-->
<!--[if IE 7 ]>    <html lang="en" class="no-js ie7 lt8"> <![endif]-->
<!--[if IE 8 ]>    <html lang="en" class="no-js ie8 lt8"> <![endif]-->
<!--[if IE 9 ]>    <html lang="en" class="no-js ie9"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!-->
<html lang="en" class="no-js">
<!--<![endif]-->
<head>
    <meta charset="UTF-8" />
    <!-- <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">  -->
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Clinike Login" />
    <meta name="author" content="IkeCode" />
    <link rel="shortcut icon" href="/favicon.ico">
    @Styles.Render("~/cssBundles/loginStyles")
</head>
<body>
    <div class="container">
        <header>
            <h1>Clinike <span>v0.2</span></h1>
        </header>
        <section>
            <div id="container_demo">
                <!-- hidden anchor to stop jump http://www.css3create.com/Astuce-Empecher-le-scroll-avec-l-utilisation-de-target#wrap4  -->
                <a class="hiddenanchor" id="toregister"></a>
                <a class="hiddenanchor" id="tologin"></a>
                <div id="wrapper">
                    <div id="login" class="animate form">
                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <h1>Login</h1>
                            @Html.ValidationSummary(true)
                            <p>
                                @Html.LabelFor(m => m.UserName, new { @data_icon = "u" })
                                @Html.TextBoxFor(m => m.UserName, new { @placeholder = "username" })
                                @Html.ValidationMessageFor(m => m.UserName)
                            </p>
                            <p>
                                @Html.LabelFor(m => m.Password, new { @data_icon = "p" })
                                @Html.PasswordFor(m => m.Password)
                                @Html.ValidationMessageFor(m => m.Password)
                            </p>
                            <p class="keeplogin">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </p>
                            <p class="login button">
                                <input type="submit" value="Login" />
                            </p>

                            <p class="change_link">
                                Se ainda você não tem uma conta de cliente/paciente
                                <a href="#toregister" class="to_register">Clique aqui</a>
                            </p>
                        }
                    </div>

                    @Html.Partial("_RequestLogin")

                </div>
            </div>
        </section>
    </div>
</body>
</html>