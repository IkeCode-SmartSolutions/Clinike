<div class="box">
    @Html.Partial("Forms/_BoxHeader", new BoxHeaderViewModel("Telefones", "fa fa-phone", false))
    <div class="box-content" data-collapsed="false">
        <table id="phonesGrid" title="Telefones" style="width:850px;height:250px"></table>
        <div id="phonesToolbar">
            <button type="button" data-buttontype="add" class="btn btn-primary btn-xs" onclick="phone.New()">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                Novo
            </button>
            <button type="button" data-buttontype="edit" class="btn btn-info btn-xs" onclick="phone.Edit()" disabled="disabled">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                Editar
            </button>
            <button type="button" data-buttontype="delete" class="btn btn-danger btn-xs" onclick="phone.Delete()" disabled="disabled">
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                Remover
            </button>
        </div>
    </div>
</div>