<div class="modal fade" id="documentEditorModal" tabindex="-1" role="dialog" aria-labelledby="documentEditorModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="documentEditorModalLabel">Documento</h4>
            </div>
            <div data-type="kobind">
                <div class="modal-body">
                    <form action="#"
                          class="form-horizontal"
                          id="_documentForm"
                          role="form">

                        <div class="form-group">
                            <div class="col-sm-5">
                                <label class="control-label">Tipo</label>&nbsp;<span class="has-error" data-bind="validationMessage: DocumentTypeId"></span>
                                <select class="form-control"
                                        data-bind="options: DocumentTypes,
                                                   optionsText: 'DisplayText',
                                                   optionsValue: 'Value',
                                                   value: DocumentTypeId,
                                                   valueUpdate: 'blur'"></select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-4 control-label">Número</label>&nbsp;<span class="has-error" data-bind="validationMessage: Number"></span>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" data-bind="value: Value,
                                                                                   valueUpdate: 'blur'">
                            </div>
                        </div>

                    </form>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary btn-label-left" data-bind="click: Save">
                        <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                        Salvar
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>