
@{
    ViewBag.Title = "List";
}

<table id="dtPeople" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered dataTable no-footer"></table>
@section scripts{

    <script type="text/javascript">
        $(document).ready(function () {
            clinikeUtils.dataTable('#dtPeople', {
                pageLength: 1,
                columns: [
                    { data: "Id", title: "Id", width: "30" },
                    {
                        data: "DateIns",
                        title: "Data de Criação",
                        render: function (data) {
                            var date = new moment(data);
                            return date.format("DD/MM/YYYY HH:mm:ss");
                        }
                    },
                    { data: "Name", title: "Nome" },
                    { data: "Email", title: "Email" }
                ],
                ajax: {
                    url: clinikeUtils.baseApiUrls.person,
                    dataSrc: 'Content.Items'
                }
            }, 'pt-br', function (result) {
                console.log('#dtPeople select result', result);
            });
        });
    </script>

}
